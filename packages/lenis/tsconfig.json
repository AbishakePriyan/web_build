{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "node",
    "noEmit": true,
    "allowJs": true,
    "removeComments": true,
    "outDir": "./dist/types"
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules"]
}
